<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/two"
    android:visibility="visible"
    tools:context=".Main.Fragment_main"
    tools:visibility="visible">






    <ImageView
   android:id="@+id/bateryChange"

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/change"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusLabel"
        android:text="Charging"
        android:textSize="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="300dp"
  android:visibility="invisible"
        >




    </TextView>



    <TextView
        android:id="@+id/percentageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="49%"
        android:textSize="10sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="323dp"


        >

    </TextView>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/wifi"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/signal"


        />



    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:layout_marginTop="7dp"
        android:clickable="true"
        android:format12Hour="hh:mm:ss"
        android:format24Hour="hh:mm:ss"
        android:text="TextClock"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="250dp"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background">


        <TextView
            android:id="@+id/textViewCategory"


            android:background="@color/ten"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="136dp"
           android:textAlignment="center"
           android:text="Android"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
    android:layout_width="match_parent"
    android:layout_height="250dp"
android:id="@+id/lottieHi"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_speed="5"
    app:lottie_rawRes="@raw/hi2"

   android:visibility="gone"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"

    />

        <Button
            android:layout_width="wrap_content"

           android:text="Click This link"
            android:textSize="5dp"
              android:textAllCaps="true"
            android:id="@+id/Link"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"


            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/explore_the"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:text="Explore the nightlife of your city"

            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />




        <com.like.LikeButton
            android:id="@+id/buttonHeart2"
            app:icon_size="13dp"
            app:icon_type="heart"
            app:like_drawable="@drawable/heart_on"
            app:unlike_drawable="@drawable/heart_off"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:liked="false"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimary"
            app:circle_end_color="@color/colorAccent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />









        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:text="Free"
           android:id="@+id/free"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView

            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="215dp"
            android:text="Price &#128176;"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />



        <ImageView
            android:id="@+id/percon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="188dp"
            android:background="@drawable/circle"
            android:scrollX="-5dp"
            android:src="@drawable/ic_group_black_24dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/percon1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="188dp"

            android:background="@drawable/circle"
            android:scrollX="-5dp"
            android:scrollY="-5dp"
            android:src="@drawable/person"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/percon3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="188dp"

            android:background="@drawable/circle"
            android:src="@drawable/groupv"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/percon4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="188dp"

            android:background="@drawable/circle"
            android:src="@drawable/groupvv"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="220dp"
            android:text="Participants"
                android:id="@+id/partic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar

            android:id="@+id/progress_bar"
            android:layout_width="90dp"
            android:layout_height="10dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"

            android:background="@drawable/pb_drawable_size"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="205dp"
            android:max="90"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="220dp"
            android:text="Accessibility"
             android:id="@+id/access"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button

        android:id="@+id/TonextTo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="335dp"

        android:background="@drawable/krug2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="405dp"
        android:text="Category"
       android:id="@+id/category"
        android:textColor="@color/white"
        android:textStyle="italic"

        />



    <Spinner

        android:id="@+id/Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/shadow"
        android:entries="@array/types"
        android:contextClickable="true"
        >


    </Spinner>


    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="194dp"
        android:layout_marginTop="410dp"
        android:text="@string/price"

       android:id="@+id/price"
        android:textColor="@color/white"


        />




    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangeSlider1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"


        android:layout_marginTop="420dp"


        android:valueFrom="0.0"

        android:valueTo="100.0"

        app:thumbColor="@color/eight" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="194dp"
        android:layout_marginTop="510dp"
        android:text="Accessibility"
        android:textColor="@color/white"
             android:id="@+id/accessibity"

        />
















    <com.google.android.material.slider.RangeSlider

        android:id="@+id/rangeSlider2"

        android:layout_width="300dp"
        android:layout_height="wrap_content"


        android:layout_marginLeft="180dp"
        android:layout_marginTop="530dp"
        android:valueFrom="0.0"
        android:outlineAmbientShadowColor="@color/material_on_background_emphasis_medium"
        android:valueTo="100.0"
         app:values="@array/initial_slider_values"
        app:thumbColor="@color/four"

       />













</RelativeLayout>










